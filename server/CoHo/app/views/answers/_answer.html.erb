<%= div_for(answer) do %>


	<%= link_to gravatar_for(answer.user, size: 20), answer.user %>
	<span class="user"><%= link_to answer.user.name, answer.user %></span>

 <div class="answers_wrapper clearfix">
 	 <div class="pull-left">
 	 	<p class"lead"><%= answer.body %></p>
 	 	<%= image_tag answer.picture.url if answer.picture? %>
 	 	<p><small>Created <strong><%= time_ago_in_words(answer.created_at) %> ago</strong> by <%= answer.user.name %></small></p>
 	 </div>

		<div class="btn-group" >
		
			<%= link_to like_answer_path(answer), method: :put, class: "btn btn-default btn-sm" do %>
			<span class="glyphicon glyphicon-chevron-up "></span>
			Like
			<%= answer.get_upvotes.size %>
			<% end %>
			<%= link_to dislike_answer_path(answer), method: :put, class: "btn btn-default btn-sm" do %>
			<span class="glyphicon glyphicon-chevron-down "></span>
			Dislike
			<%= answer.get_downvotes.size %>
			<% end %>
		</div>

 	
 	 <div class="btn-group pull-right">
 	 	<% if answer.user == current_user %>
 	 	 <%= link_to 'Delete', answer, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-sm btn-default" %>
 	 	 <% end %>
 	 	</div>
 	 </div>


 	 <% end %>